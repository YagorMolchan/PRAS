@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model PRAS.Models.Entities.New

<article class="article">
    <header class="article-header">
        <h2>@Model.Name</h2>
    </header>
    <section class="article-section">
        <figure>
            <img src="~/img/@Model.ImagePath" width="320" height="230" />
        </figure>
        <p class="description">@Model.Description</p>
    </section>
    <main class="article-main">
        @foreach (var paragraph in Model.Text.Split("\r\n"))
        {
            <p>
                @paragraph
            </p>
        }
    </main>
    <footer>
        <a class="btn btn-primary" onclick="history.back()" style="color: white;">@Localizer["Back"]</a>
    </footer>
</article>

